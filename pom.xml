<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.jenkins-ci.plugins</groupId>
    <artifactId>plugin</artifactId>
    <version>3.53</version>
    <relativePath/>
  </parent>

  <groupId>io.jenkins.plugins</groupId>
  <artifactId>metrics-aggregation-parent</artifactId>
  <packaging>pom</packaging>
  <version>0.1.0-beta0-SNAPSHOT</version>
  <name>Metrics Aggregation Parent</name>
  <description>Parent pom to build the metrics aggregation Jenkins plugin (plugin and shaded pmd library)</description>

  <properties>
    <java.level>8</java.level>
    <jenkins.version>2.138.4</jenkins.version>    
    <jenkins-test-harness.version>2.49</jenkins-test-harness.version>
  </properties>

  <modules>
    <module>shaded-pmd</module>
    <module>plugin</module>
  </modules>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-release-plugin</artifactId>
          <version>2.5.1</version>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

</project>